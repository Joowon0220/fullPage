$(document).ready(function(){
	$('.burger').click(function(){
	
		$(this).toggleClass('on');
	});
	
	$('.on').click(function(){
		
		var t_menu = document.getElementById("burger-wrap");
		if(t_menu.style.display == 'none'){
			t_menu.style.display = 'block';
		}else{
			t_menu.style.display = 'none';
		}
		
		
	});
	
});

